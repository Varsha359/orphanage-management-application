<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAdmin"
    android:fontFamily="sans-serif"
    android:textColor="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/tv_admin_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register Orphanage"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"

            />

        <TextView
            android:id="@+id/tv_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Orphanage Name :" />

        <EditText
            android:id="@+id/et_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/tv_admin_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Manager Name :" />

        <EditText
            android:id="@+id/et_admin_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/tv_admin_no_of_ppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="No of People :" />

        <EditText
            android:id="@+id/et_admin_no_of_ppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/tv_admin_bank_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="Bank Details :" />

        <TextView
            android:id="@+id/tv_admin_account_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:text="Account No :" />

        <EditText
            android:id="@+id/et_admin_account_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/tv_admin_ifsc_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:text="IFSC :" />
        <EditText
            android:id="@+id/et_admin_ifsc_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/tv_admin_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Address :" />

        <EditText
            android:id="@+id/et_admin_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textLongMessage"
            />

        <TextView
            android:id="@+id/tv_admin_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="City :" />

        <EditText
            android:id="@+id/et_admin_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/tv_admin_register_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Email :" />

        <EditText
            android:id="@+id/et_admin_register_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="textEmailAddress"
            />
        <TextView
            android:id="@+id/tv_admin_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Mobile :" />

        <EditText
            android:id="@+id/et_admin_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/tv_admin_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Password" />

        <EditText
            android:id="@+id/et_admin_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/tv_admin_register_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Confirm Password" />

        <EditText
            android:id="@+id/et_admin_register_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="20dp"
            android:inputType="text"
            />

        <Button
            android:id="@+id/btn_admin_register_orphanage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            />


    </LinearLayout>
</ScrollView>